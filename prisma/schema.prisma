generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id        String   @id @default(cuid())
  original  String
  shortCode String   @unique
  custom    Boolean  @default(false) // Track if it's a custom link
  clicks    Int      @default(0)
  createdAt DateTime @default(now())
}